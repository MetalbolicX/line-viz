{
  "compilerOptions": {
    "target": "ES2025",
    "module": "ES2025",
    "lib": ["ES2025", "DOM"],
    "strict": true,
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "skipLibCheck": true,
    "outDir": "./dist",
    "rootDir": "./src",
    "noImplicitAny": true,
    "noUnusedLocals": true,
    "noUnusedParameters": true,
    "resolveJsonModule": true
  },
  "include": ["src/**/*.{ts,tsx,mts,cts}"],
  "exclude": ["node_modules", "dist"]
}
